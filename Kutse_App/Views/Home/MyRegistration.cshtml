@model IEnumerable<Kutse_App.Models.Guest>

@{
    ViewBag.Title = "Minu registreerimised";
}

<h2>MyRegistration</h2>

<p>
    <form action="@Url.Action("MyRegistration", "Home")" method="get">
        <label for="email">Sisestage oma e-posti aadress:</label>
        <input type="email" name="email" id="email" placeholder="E-posti aadress" required />
        <button type="submit">Otsi</button>
    </form>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HolidayId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Holiday.Name)
        </td>
        <td>
            @Html.ActionLink("Muuda", "Edit", new { id=item.Id }) |
        </td>
    </tr>
}

</table>
